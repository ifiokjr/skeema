{
  "private": true,
  "name": "root",
  "workspaces": {
    "packages": [
      "@skeema/*",
      "internal/*"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "checks": "run-s integrity lint typecheck test",
    "checks:parallel": "run-p integrity lint typecheck test",
    "ci:checks": "run-s integrity lint typecheck build test:ci",
    "ci:coverage": "codeclimate-test-reporter < coverage/lcov.info",
    "ci:setup": "node support/scripts/ci-setup.js",
    "clean": "run-s clean:lerna clean:modules clean:root",
    "clean:lerna": "lerna clean --yes",
    "clean:modules": "lerna run --parallel clean",
    "clean:root": "rimraf node_modules .jest coverage",
    "dev": "lerna run dev --parallel",
    "fix": "run-s fix:*",
    "fix:config": "tslint --project support/tsconfig.json --config tslint.json --fix",
    "fix:lint": "lerna run lint --parallel -- --fix",
    "fix:prettier": "prettier --write \"**/*.{json,yml,yaml,md}\"",
    "postinstall": "node support/scripts/postinstall.js",
    "integrity": "yarn check --integrity",
    "lint": "run-s lint:*",
    "lint:config": "tslint --project support/tsconfig.json --config tslint.json",
    "lint:dts": "tslint -p dtslint/tsconfig.custom.json -c dtslint/tslint.custom.json dtslint/*.dts.ts",
    "lint:ts": "lerna run lint --parallel",
    "prepublish:alpha": "run-s ci:checks",
    "publish:alpha": "lerna publish prerelease --preid=alpha --exact --dist-tag=alpha",
    "setup": "run-s test:setup",
    "test": "jest",
    "test:ci": "cross-env TEST_ENV=live jest",
    "test:live": "cross-env TEST_ENV=live FIREBASE_CONFIG={} jest",
    "test:setup": "node support/scripts/setup.js",
    "test:watch": "jest  --watch --verbose=false",
    "test:watch:live": "cross-env TEST_ENV=live FIREBASE_CONFIG={} jest  --watch --verbose=false --coverage=false",
    "typecheck": "run-s typecheck:*",
    "typecheck:config": "tsc -p support/tsconfig.json --noEmit ",
    "typecheck:modules": "lerna run typecheck"
  },
  "engines": {
    "node": ">=8",
    "yarn": "^1.13.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn checks",
      "post-merge": "lerna bootstrap"
    }
  },
  "lint-staged": {
    "@skeema/*/src/**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "@skeema/!(jest-mocks)?*/src/**/!(unit-test-helpers)?*.!(test.)?{ts,tsx}": [
      "jest --coverage=false --bail --findRelatedTests"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "@skeema/*/package.json": [
      "prettier-package-json --write",
      "git add"
    ]
  },
  "resolutions": {
    "@google-cloud/firestore": "1.0.1"
  }
}
