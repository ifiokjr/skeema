{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@unit-test-helpers": ["@skeema/core/src/__tests__/unit-test-helpers.ts"],
      "@live-test-helpers": ["@skeema/firestore/src/__tests__/live-test-helpers.ts"],
      "@skeema/jest-mocks/lib/*": ["@skeema/jest-mocks/src/*"],
      "@skeema/core": ["@skeema/core/src/index.ts"],
      "*": ["support/types/*"]
    },
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true
  }
}
