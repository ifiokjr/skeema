{
  "name": "@skeema/firestore",
  "description": "Quickly create schema for firestore",
  "license": "MIT",
  "author": "Ifiok Jr. <ifiokotung@gmail.com>",
  "repository": "https://github.com/ifiokjr/skeema/tree/master/@skeema/firestore",
  "version": "0.0.1-alpha.3",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prebuild": "run-s clean lint",
    "build": "run-s build:declaration build:babel",
    "build:babel": "babel src --out-dir lib --extensions \".ts\" --source-maps true",
    "build:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap",
    "clean": "rimraf lib",
    "dev": "run-p watch:*",
    "lint": "tslint --project tsconfig.json --config ../../tslint.json",
    "test": "jest",
    "test:live": "cross-env TEST_ENV=live jest",
    "typecheck": "tsc -p ./tsconfig.json --noEmit",
    "watch:babel": "babel src --out-dir lib --extensions \".ts\" --watch",
    "watch:declaration": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly --declarationMap --watch"
  },
  "dependencies": {
    "@google-cloud/firestore": "1.0.1",
    "@skeema/core": "0.0.1-alpha.3",
    "io-ts": "1.8.1",
    "io-ts-types": "0.4.2",
    "lodash": "4.17.11",
    "stringify-object": "3.3.0"
  },
  "peerDependencies": {
    "firebase-admin": "^7.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "types": "lib/index.d.ts"
}
